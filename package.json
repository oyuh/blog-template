		"@astrojs/rss": "4.0.11",
		"@astrojs/sitemap": "3.2.1",
		"@astrojs/vercel": "^8.2.11",
		"@heroui/card": "^2.2.27",
		"@heroui/progress": "^2.2.24",
		"@heroui/react": "^2.8.8",
		"@iconify/react": "^6.0.2",
		"@libsql/client": "^0.15.15",
