		"three": "^0.180.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.1.0",
		"vite": "^6.4.1"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@biomejs/biome": "^1.9.4",
		"@iconify-json/mdi": "^1.2.3",
