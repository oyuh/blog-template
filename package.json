		"autoprefixer": "^10.4.24",
		"pagefind": "^1.4.0",
		"prettier": "^3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"reading-time": "^1.5.0",
		"tailwindcss": "4.1.18",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"sharp"
		],
		"overrides": {
			"esbuild": "^0.25.10",
			"sharp": "^0.33.5"
		}
	}
