---
import ClientErrorPage from "@/components/ClientErrorPage.astro";
import PageLayout from "@/layouts/Base.astro";

const statusParam = Number(Astro.url.searchParams.get("status") ?? 400);
const statusCode = Number.isInteger(statusParam) && statusParam >= 400 && statusParam <= 499 ? statusParam : 400;

const meta = {
	description: "Client error page",
	title: `Client Error (${statusCode})`,
};

---

<PageLayout meta={meta}>
	<ClientErrorPage attemptedPath={Astro.url.searchParams.get("from") ?? Astro.url.pathname} statusCode={statusCode} />
</PageLayout>
